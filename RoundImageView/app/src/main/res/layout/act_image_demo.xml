<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.guang.myapplication.view.RoundImageView
        android:id="@+id/iv_test1"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg"
        app:isBottomLeft="true"
        app:isBottomLeftOuterCircle="false"
        app:isBottomRight="true"
        app:isBottomRightOuterCircle="false"
        app:isTopLeft="true"
        app:isTopLeftOuterCircle="true"
        app:isTopRight="true"
        app:isTopRightOuterCircle="true"
        app:radius="15dp"/>

    <com.guang.myapplication.view.RoundImageView
        android:id="@+id/iv_test2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@color/colorAccent"
        app:isBottomLeft="true"
        app:isBottomLeftOuterCircle="true"
        app:isBottomRight="true"
        app:isBottomRightOuterCircle="true"
        app:isTopLeft="true"
        app:isTopLeftOuterCircle="false"
        app:isTopRight="true"
        app:isTopRightOuterCircle="false"
        app:radius="15dp"/>

</LinearLayout>